<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activityRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp" >

    <ImageButton
        android:id="@+id/closeImgBtnDialog"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@null"
        android:contentDescription="@string/hello_world"
        android:padding="0dp"
        android:scaleType="fitStart"
        android:src="@drawable/close_img" >
    </ImageButton>

    <ImageButton
        android:id="@+id/imageDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:contentDescription="@string/hello_world"
        android:paddingTop="10dp"
        android:scaleType="fitStart" >
    </ImageButton>

    <Button
        android:id="@+id/shareImgBtn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/imageDialog"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:background="@drawable/share_img_btn"
        android:contentDescription="@string/share_text" >
    </Button>

    <WebView
        android:id="@+id/webview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shareImgBtn" />

</RelativeLayout>