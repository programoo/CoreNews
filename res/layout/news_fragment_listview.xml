<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/listview_rounded_bg"
    android:orientation="vertical" >

    <ImageButton
        android:id="@+id/newsIcon"
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:background="@color/red"
        android:scaleType="fitXY"
        android:contentDescription="@string/hello_world"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/newsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/newsIcon"
        android:singleLine="true"
        android:textSize="12sp"
        android:typeface="sans" />

    <RelativeLayout
        android:id="@+id/signature_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/newsText"
        android:layout_toRightOf="@+id/newsIcon"
        android:background="@drawable/signature_rounded_bg" >

        <ImageView
            android:id="@+id/providerIcon"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentBottom="true"
            android:contentDescription="@string/hello_world"
            android:src="@drawable/thairath" />

        <TextView
            android:id="@+id/fromText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/providerIcon"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:textSize="8sp"
            android:typeface="sans" />
    </RelativeLayout>

</RelativeLayout>